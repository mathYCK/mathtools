    <script>
        const workspace = document.getElementById('workspace');
        const overlay = document.getElementById('msg-overlay');
        const targetDisplay = document.getElementById('targetDisplay');
        const SIZE_1 = 40;
        const SIZE_X = 100;
        const SNAP = 20;

        // --- é¡Œç›®åƒæ•¸è¨­å®š (è¼•é‡ç‰ˆ) ---
        const tasks = {
            't0': { level: 'tutorial', x2:1, x:3, one:2, label: 'xÂ² + 3x + 2' },

            't1': { level: 'basic', x2:1, x:2, one:1, label: 'xÂ² + 2x + 1' },
            't2': { level: 'basic', x2:1, x:4, one:3, label: 'xÂ² + 4x + 3' },
            
            't3': { level: 'mid',   x2:1, x:5, one:6, label: 'xÂ² + 5x + 6' },
            't4': { level: 'mid',   x2:1, x:6, one:8, label: 'xÂ² + 6x + 8' },
            't5': { level: 'mid',   x2:1, x:7, one:12, label: 'xÂ² + 7x + 12' },

            't6': { level: 'hard',  x2:1, x:10, one:16, label: 'xÂ² + 10x + 16' },
            't7': { level: 'hard',  x2:1, x:10, one:24, label: 'xÂ² + 10x + 24' },

            't8': { level: 'special', x2:2, x:13, one:21, label: '2xÂ² + 13x + 21' },
            't9': { level: 'special', x2:2, x:19, one:24, label: '2xÂ² + 19x + 24' }
        };

        let completedTasks = new Set();
        
        // åˆ†ç´šä»»å‹™ç¸½æ•¸
        const totalTasks = {
            basic: 2,
            mid: 3,
            hard: 2,
            special: 2
        };

        // åˆ‡æ›ä»»å‹™
        document.getElementById('levelSelect').addEventListener('change', function() {
            clearWorkspace();
            const val = this.value;
            if (val !== 'custom' && tasks[val]) {
                targetDisplay.innerText = "ç›®æ¨™ï¼š" + tasks[val].label;
                targetDisplay.style.borderColor = "#0984e3";
                targetDisplay.style.color = "#0984e3";
                targetDisplay.style.backgroundColor = "#e8f0fe";
            } else {
                targetDisplay.innerText = "è‡ªç”±ç·´ç¿’æ¨¡å¼";
                targetDisplay.style.borderColor = "#dcdde1";
                targetDisplay.style.color = "#636e72";
                targetDisplay.style.backgroundColor = "#f5f6fa";
            }
        });

        // ç©æœ¨æ“ä½œ
        let selectedElement = null;
        let offset = { x: 0, y: 0 };

        function spawnTile(type) {
            const div = document.createElement('div');
            div.classList.add('tile');
            
            if (type === 'x2') {
                div.classList.add('tile-x2');
                div.style.width = SIZE_X + 'px'; div.style.height = SIZE_X + 'px';
                div.dataset.type = 'x2';
            } else if (type === 'x') {
                div.classList.add('tile-x');
                div.style.width = SIZE_1 + 'px'; div.style.height = SIZE_X + 'px';
                div.dataset.type = 'x';
            } else {
                div.classList.add('tile-1');
                div.style.width = SIZE_1 + 'px'; div.style.height = SIZE_1 + 'px';
                div.dataset.type = '1';
            }

            div.addEventListener('mousedown', startDrag);
            div.addEventListener('touchstart', startDrag, {passive: false}); // æ”¯æ´è§¸æ§

            if (type === 'x') {
                const clickHandler = (e) => {
                    if(!div.isDragging) {
                        div.classList.toggle('rotated');
                        updateStats();
                    }
                };
                div.addEventListener('click', clickHandler);
                // å¹³æ¿å¯èƒ½éœ€è¦ touchend æ¨¡æ“¬ click
            }

            div.style.left = (Math.random() * 50 + 20) + 'px';
            div.style.top = (Math.random() * 50 + 20) + 'px';
            workspace.appendChild(div);
            updateStats();
        }

        function clearWorkspace() {
            workspace.innerHTML = '';
            updateStats();
        }

        function startDrag(e) {
            if (e.type === 'touchstart') e.preventDefault(); // é˜²æ­¢æ»¾å‹•
            const evt = e.type === 'touchstart' ? e.touches[0] : e;
            
            selectedElement = e.target;
            selectedElement.isDragging = false;
            const rect = selectedElement.getBoundingClientRect();
            offset.x = evt.clientX - rect.left;
            offset.y = evt.clientY - rect.top;
            selectedElement.startX = evt.clientX;
            selectedElement.startY = evt.clientY;

            if (e.type === 'touchstart') {
                document.addEventListener('touchmove', drag, {passive: false});
                document.addEventListener('touchend', endDrag);
            } else {
                document.addEventListener('mousemove', drag);
                document.addEventListener('mouseup', endDrag);
            }
        }

        function drag(e) {
            if (e.type === 'touchmove') e.preventDefault();
            const evt = e.type === 'touchmove' ? e.touches[0] : e;

            if (!selectedElement) return;
            if (Math.abs(evt.clientX - selectedElement.startX) > 5 || 
                Math.abs(evt.clientY - selectedElement.startY) > 5) {
                selectedElement.isDragging = true;
            }
            const workspaceRect = workspace.getBoundingClientRect();
            let newX = evt.clientX - workspaceRect.left - offset.x;
            let newY = evt.clientY - workspaceRect.top - offset.y;
            newX = Math.round(newX / SNAP) * SNAP;
            newY = Math.round(newY / SNAP) * SNAP;
            
            // é‚Šç•Œæª¢æŸ¥
            if(newX < 0) newX = 0;
            if(newY < 0) newY = 0;
            if(newX > workspaceRect.width - selectedElement.offsetWidth) newX = workspaceRect.width - selectedElement.offsetWidth;
            if(newY > workspaceRect.height - selectedElement.offsetHeight) newY = workspaceRect.height - selectedElement.offsetHeight;

            selectedElement.style.left = newX + 'px';
            selectedElement.style.top = newY + 'px';
        }

        function endDrag(e) {
            selectedElement = null;
            document.removeEventListener('mousemove', drag);
            document.removeEventListener('mouseup', endDrag);
            document.removeEventListener('touchmove', drag);
            document.removeEventListener('touchend', endDrag);
            updateStats();
        }

        // --- æ ¸å¿ƒé©—è­‰ ---
        function verifyCarpet() {
            const tiles = Array.from(workspace.querySelectorAll('.tile'));
            if (tiles.length === 0) { showMsg("ç•«å¸ƒæ˜¯ç©ºçš„ï¼", false); return; }

            const current = updateStats(true);
            const taskKey = document.getElementById('levelSelect').value;
            
            // 1. æ•¸é‡é©—è­‰
            if (taskKey !== 'custom') {
                const target = tasks[taskKey];
                if (current.x2 !== target.x2 || 
                   (current.xv + current.xh) !== target.x || 
                   current.one !== target.one) {
                    showMsg(`âš ï¸ ææ–™æ•¸é‡ä¸å°ï¼`, false);
                    addToHistory(false, 'count_error');
                    return;
                }
            }

            // 2. å½¢ç‹€é©—è­‰
            let totalArea = 0;
            let minX = Infinity, minY = Infinity, maxX = -Infinity, maxY = -Infinity;

            tiles.forEach(tile => {
                const w = tile.offsetWidth;
                const h = tile.offsetHeight;
                const x = parseInt(tile.style.left);
                const y = parseInt(tile.style.top);
                totalArea += (w * h);
                if (x < minX) minX = x;
                if (y < minY) minY = y;
                if (x + w > maxX) maxX = x + w;
                if (y + h > maxY) maxY = y + h;
            });

            const boundW = maxX - minX;
            const boundH = maxY - minY;
            const boundingArea = boundW * boundH;
            const isCompact = Math.abs(boundingArea - totalArea) < 100;

            if (isCompact && boundW > 0 && boundH > 0) {
                showMsg("ğŸ‰ æˆåŠŸï¼æ‹¼å‡ºå®Œç¾çŸ©å½¢ï¼", true);
                if (taskKey !== 'custom') {
                    if (!completedTasks.has(taskKey)) {
                        completedTasks.add(taskKey);
                        updateProgress();
                    }
                }
                addToHistory(true, 'success');
            } else {
                showMsg("âš ï¸ å½¢ç‹€ä¸å°ï¼\nè«‹æ‹¼æˆå¯¦å¿ƒé•·æ–¹å½¢ã€‚", false);
                addToHistory(false, 'shape_error');
            }
        }

        function updateProgress() {
            let counts = { basic: 0, mid: 0, hard: 0, special: 0 };
            completedTasks.forEach(key => {
                const lvl = tasks[key].level;
                if (counts[lvl] !== undefined) counts[lvl]++;
            });

            document.getElementById('count-basic').innerText = `${counts.basic}/${totalTasks.basic}`;
            document.getElementById('count-mid').innerText = `${counts.mid}/${totalTasks.mid}`;
            document.getElementById('count-hard').innerText = `${counts.hard}/${totalTasks.hard}`;
            document.getElementById('count-special').innerText = `${counts.special}/${totalTasks.special}`;

            if (counts.basic >= totalTasks.basic) unlockGroup('opt-mid', 'badge-mid');
            if (counts.mid >= totalTasks.mid) unlockGroup('opt-hard', 'badge-hard');
            if (counts.hard >= totalTasks.hard) unlockGroup('opt-special', 'badge-special');

            // å…¨ç ´ç‰¹æ•ˆ
            if(counts.special >= totalTasks.special) {
                setTimeout(() => { alert("ğŸ† å¤ªå¼·äº†ï¼æ­å–œä½ å®Œæˆæ‰€æœ‰æŒ‘æˆ°ï¼"); }, 1000);
            }
        }

        function unlockGroup(groupId, badgeId) {
            const group = document.getElementById(groupId);
            const badge = document.getElementById(badgeId);
            if (group.disabled) {
                group.disabled = false;
                group.label = group.label.replace("ğŸ”’ ", "");
                badge.classList.remove('locked');
                badge.classList.add('active');
                badge.innerHTML = badge.innerHTML.replace("ğŸ”’ ", "");
                const options = group.querySelectorAll('option');
                options.forEach(opt => opt.disabled = false);
                showMsg("ğŸ”“ æ–°éšæ®µå·²è§£é–ï¼", true);
            }
        }

        function updateStats(returnObj = false) {
            const tiles = workspace.querySelectorAll('.tile');
            let counts = { x2: 0, xv: 0, xh: 0, one: 0 };
            tiles.forEach(tile => {
                const type = tile.dataset.type;
                if(type === 'x2') counts.x2++;
                else if(type === '1') counts.one++;
                else if(type === 'x') {
                    if(tile.classList.contains('rotated')) counts.xh++;
                    else counts.xv++;
                }
            });
            document.getElementById('count-x2').innerText = counts.x2;
            document.getElementById('count-x-total').innerText = counts.xv + counts.xh;
            document.getElementById('count-x-v').innerText = counts.xv;
            document.getElementById('count-x-h').innerText = counts.xh;
            document.getElementById('count-1').innerText = counts.one;
            return counts;
        }

        function addToHistory(isSuccess, reason) {
            const counts = updateStats(true);
            const select = document.getElementById('levelSelect');
            const taskKey = select.value;
            let label = taskKey === 'custom' ? 'è‡ªç”±ç·´ç¿’' : tasks[taskKey].label;

            let statusHtml = '';
            if (isSuccess) {
                statusHtml = '<span class="status-badge st-success">âœ… æˆåŠŸ</span>';
            } else {
                if (reason === 'count_error') statusHtml = '<span class="status-badge st-fail-count">âš ï¸ æ•¸é‡éŒ¯èª¤</span>';
                else statusHtml = '<span class="status-badge st-fail-shape">âŒ å½¢ç‹€éŒ¯èª¤</span>';
            }

            const tbody = document.querySelector('#history-table tbody');
            const row = document.createElement('tr');
            
            row.innerHTML = `
                <td style="text-align:left;">${label}</td>
                <td>${counts.x2}</td>
                <td>ç›´: ${counts.xv} / æ©«: ${counts.xh}</td>
                <td>${counts.one}</td>
                <td>${statusHtml}</td>
            `;
            tbody.insertBefore(row, tbody.firstChild);
        }

        function showMsg(text, isSuccess) {
            overlay.innerHTML = text;
            overlay.className = 'message-overlay ' + (isSuccess ? 'success-overlay' : 'error-overlay');
            overlay.style.display = 'block';
            setTimeout(() => { overlay.style.display = 'none'; }, 2000);
        }

        function takeScreenshot() {
            const element = document.getElementById("capture-area");
            // æš«æ™‚éš±è—ä¸å¿…è¦çš„å…ƒä»¶
            html2canvas(element, {scale: 2}).then(canvas => {
                const link = document.createElement('a');
                link.download = 'åœ°æ¯¯å·¥å» _å­¸ç¿’ç´€éŒ„.png';
                link.href = canvas.toDataURL();
                link.click();
            });
        }
    </script>
</body>
</html>
